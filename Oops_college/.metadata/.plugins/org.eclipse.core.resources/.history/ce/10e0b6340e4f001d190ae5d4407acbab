
public class Assign12Test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Rectangle r1 = new Rectangle(3, 4);
		r1.area();
		r1.perimeter();
		r1.display();
		
		Triangle t1 = new Triangle(4, 3, 2);
		t1.area();
		t1.perimeter();
		t1.display();
	}

}

class Rectangle implements GeomFigure{
	int length, width;
	int area, perimeter;
	static String figure = "Rectangle";
	
	public Rectangle(int l, int w) {
		length = l;
		width = w;
	}
	
	//override
	public void area() {
		area = length * width;
	}
	
	//override
	public void perimeter() {
		perimeter = 2 * (length + width);
	}
	
	public void display() {
		System.out.println("******"+figure+"******");
		System.out.println("Area of Rectangle: "+area);
		System.out.println("Perimeter : "+perimeter);
	}
}

class Triangle implements GeomFigure{
	int height, base, side;
	int area, perimeter;
	static String figure = "Triangle";
	
	public Triangle(int h, int b, int s) {
		height = h;
		base = b;
		side = s;
	}
	
	//override
	public void area() {
		area = 1/2 * (base * height);
	}
	//override
	public void perimeter() {
		perimeter = side + base + side;
	}
	
	public void display() {
		System.out.println("******"+figure+"******");
		System.out.println("Area of Triangle: "+area);
		System.out.println("Perimeter : "+perimeter);
	}
}